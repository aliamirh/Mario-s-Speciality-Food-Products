<h1>Here are some details about <%= @product.name %></h1>
<h3><%= @product.name %> price: <span class="cost">$<%= @product.cost %></span></h3> <br>
<h3><%= @product.name %> Country of origin: <span class="cost"><%= @product.country_of_origin %></span></h3> <br>

<% if @product.reviews.any? %>
  <h4>Here are the reviewer's for this product:</h4>

  <% @product.reviews.each do |review| %>
    <ul>
      <li>
        <%= link_to review.author, product_review_path(@product, review) %>
      </li>
    </ul>
  <% end %>
<% else %>
  <p>No reviews are listed for this product.</p>
<% end %>

<p class="link"><%= link_to "Add a review", new_product_review_path(@product) %></p>

<p class="link"><%= link_to "Edit #{@product.name}", edit_product_path(@product) %></p>
<p class="link"><%= link_to "Delete product", product_path(@product),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>

<p class="link"><%= link_to "Return to products", products_path %></p>
