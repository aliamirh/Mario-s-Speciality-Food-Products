<h1>Edit review by:<%=@review.author%></h1>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :content_body %>
  <%= f.text_area :content_body %>
  <%= f.label :rating %>
  <%= f.number_field :rating, step: 1, min: 1, max: 5 %>
  <p><%= f.submit %></p>
<% end %>
